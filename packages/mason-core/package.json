{
  "name": "@mason/core",
  "version": "0.1.0",
  "description": "Mason Core - Analysis, scoring, and LLM orchestration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@mason/templates": "workspace:*",
    "fast-glob": "^3.3.0",
    "tiktoken": "^1.0.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mason",
    "analysis",
    "llm"
  ]
}
